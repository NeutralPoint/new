<!--Страница входа-->
<% provide(:title, "Вход") %>
<h1>Вход</h1>
<!--Формы для входа-->
<div class="container">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name,"Имя" %>
      <%= f.text_field :name %>

      <%= f.label :password, "пароль" %>
      <%= f.password_field :password %>

      <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>В первый раз на сайте? <%= link_to "Зарегистрируйся!", signup_path %></p>
  </div>
</div>