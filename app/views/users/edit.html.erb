<!--Страничка редактирования пользователя-->
<% provide(:title, "Редактирование профиля") %>
<h1>Редактируйте свой профиль</h1>

<div class="container">
  <div class="span6 offset3">
    <!--Поля для редактирования-->
    <%= form_for(@user) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Имя" %>
      <%= f.text_field :name %>

      <%= f.label :password, "Пароль"  %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
