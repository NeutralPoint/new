<div class="row">
  <%= form_tag("/gost", method: "get") do %>
  <div class="col-md-6">
   <!--Автор. Заглавие статьи: сведения, относящиеся к заглавию / сведения об ответственности (авторы статьи) // Заглавие книги: сведения, сведения, относящиеся  к заглавию / сведения об ответственности (авторы книги); последующие сведения об отвественности (редакторы, переводчики, коллективы). – Место издания: Издательство, год издания. – Местоположение статьи (страницы).-->
    <%= label_tag(:autors, "Автор(ы)") %>
    <%= text_field_tag(:autors,nil) %>
    <%= label_tag(:title, "Заглавие статьи") %> 
    <%= text_field_tag(:title) %>
    <%= label_tag(:title_info, "Сведения, относящиеся к заглавию") %> 
    <%= text_field_tag(:title_info) %>
    <%= label_tag(:title_book, "Заглавие книги") %> 
    <%= text_field_tag(:title_book) %>
    <%= label_tag(:title_book_info, "Сведения, относящиеся к заглавию книги") %> 
    <%= text_field_tag(:title_book_info) %>
    <%= label_tag(:str, "Положение статьи(страница)") %> 
    <%= number_field_tag(:str,nil,min:1,step:1) %>
  </div>
  <div class="col-md-6">
    <%= label_tag(:autors_book, "Авторы книги") %> 
    <%= text_field_tag(:autors_book) %>
    <%= label_tag(:redactors_book, "Редакторы и тд") %> 
    <%= text_field_tag(:redactors_book) %>
    <%= label_tag(:edition_place, "Место издания") %> 
    <%= text_field_tag(:edition_place) %>
    <%= label_tag(:edition, "Издательство") %> 
    <%= text_field_tag(:edition) %>
    <%= label_tag(:edition_year, "Год издания") %> 
    <%= number_field_tag(:edition_year,nil,min:1000,step:1) %>
    <%= submit_tag("Добавить статью", class: "btn btn-large btn-primary") %>
  </div>
  <% end %>
</div>